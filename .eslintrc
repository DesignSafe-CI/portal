{
    "extends": ["eslint:recommended", "google"],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
    },
    "rules": {
        "semi"              : [1, "always"],
        "consistent-return" : 2,
        "indent"            : [1, 4],
        "no-else-return"    : 1,
        "space-unary-ops"   : 2,
        "max-len"           : 0,
        "arrow-parens"      : [1, "as-needed"],
    },
    "globals": {
        "_": false,
        "moment": false,
        "angular": false
    }
}
